  "epochs_count": 500,
  "validate_frame_counts": {
    "bird": 22376,
    "cat": 28162,
    "hedgehog": 42518,
    "human": 7396,
    "leporidae": 17305,
    "mustelid": 10685,
    "possum": 44951,
    "rodent": 82310,
    "unclassified": 100603,
    "vehicle": 2382,
    "wallaby": 15956
  },
  "sample_weights": {
    "bird": 22376,
    "cat": 28162,
    "hedgehog": 42518,
    "human": 7396,
    "leporidae": 17305,
    "mustelid": 10685,
    "possum": 44951,
    "rodent": 82310,
    "unclassified": 100603,
    "vehicle": 2382,
    "wallaby": 15956
  },
  "frame_count_multiple": 3,
  "max_frame_load_count": 300000,
  "replace_fraction_per_epoch": 0.2,
  "certainty_loss_weight": 0.1,
  "noise_scale": 4,
  "rotation_limit": 30,
  "use_flip": true,
  "data_path": "/data/dennis/irvideo/data",
  "base_save_path": "/data/dennis/irvideo/models",
  "checkpoint_callback": {
    "filepath": "model-{epoch:02d}-acc{val_class_categorical_accuracy:.4f}-f1{val_class_f1score:.4f}",
    "monitor": "val_class_categorical_accuracy",
    "mode": "max",
    "save_best_only": true,
    "save_weights_only": false
  },
  "lr_callback": {
    "monitor": "val_class_categorical_accuracy",
    "mode": "max",
    "factor": 0.65,
    "patience": 6,
    "min_lr": 0.00001,
    "verbose": 1
  },
  "stopping_callback": {
    "monitor": "val_class_categorical_accuracy",
    "mode": "max",
    "patience": 26
  },
  "plots": [
    {
      "title": "Loss by epoch",
      "values": ["class_loss", "certainty_loss"],
      "y-label": "Loss",
      "caption-loc": "upper right"
    },
    {
      "title": "Accuracy by epoch",
      "values": ["class_f1score", "class_categorical_accuracy", "certainty_mean_squared_error"],
      "y-label": "Accuracy",
      "caption-loc": "upper left" }
  ]
}